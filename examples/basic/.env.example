# 基础环境配置示例
# 复制此文件为 .env 并根据实际情况修改

# 应用配置
APP_NAME="Webman Filament"
APP_ENV=local
APP_KEY=base64:your-app-key-here
APP_DEBUG=true
APP_URL=http://localhost:8787

# 数据库配置
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=webman_filament
DB_USERNAME=root
DB_PASSWORD=password

# Redis 配置（可选）
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

# 缓存配置
CACHE_DRIVER=file
SESSION_DRIVER=file
QUEUE_CONNECTION=sync

# Filament 配置
FILAMENT_AUTO_REGISTER_ROUTES=true
FILAMENT_PANEL_ID=admin
FILAMENT_PANEL_PATH=admin
FILAMENT_PANEL_TITLE="管理后台"
FILAMENT_PANEL_SHORT_TITLE="后台"
FILAMENT_AUTH_GUARD=web
FILAMENT_DARK_MODE=false

# 认证配置
AUTH_SUPER_ADMINS=admin@example.com
AUTH_MFA_ENABLED=false

# 日志配置
LOG_CHANNEL=stack
LOG_LEVEL=debug

# 安全配置
SESSION_LIFETIME=120
SESSION_SECURE_COOKIE=false

# 静态资源配置
FILAMENT_ASSETS_VERSION=4.0.0
FILAMENT_ASSETS_CDN_ENABLED=false