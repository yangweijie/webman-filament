# 开发环境配置
# ⚠️ 此配置仅用于开发环境，不适合生产环境使用

# 应用配置
APP_NAME="Webman Filament Dev"
APP_ENV=development
APP_KEY=base64:your-dev-app-key-here
APP_DEBUG=true
APP_URL=http://localhost:8787

# 数据库配置
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=webman_filament_dev
DB_USERNAME=root
DB_PASSWORD=password

# Redis 配置（可选）
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

# 缓存配置
CACHE_DRIVER=file
SESSION_DRIVER=file
QUEUE_CONNECTION=sync

# Filament 配置
FILAMENT_AUTO_REGISTER_ROUTES=true
FILAMENT_PANEL_ID=admin
FILAMENT_PANEL_PATH=admin
FILAMENT_PANEL_TITLE="开发后台"
FILAMENT_PANEL_SHORT_TITLE="开发"
FILAMENT_AUTH_GUARD=web
FILAMENT_DARK_MODE=true

# 开发环境调试配置
FILAMENT_DEBUG_ENABLED=true
FILAMENT_SHOW_SQL_QUERIES=true
FILAMENT_SHOW_PERFORMANCE_METRICS=true
FILAMENT_VERBOSE_ERROR_MESSAGES=true

# 热重载配置
FILAMENT_HOT_RELOAD_ENABLED=true
FILAMENT_HOT_RELOAD_WATCH_PATHS=app/Filament,config/filament.php,resources/views/filament

# 认证配置
AUTH_SUPER_ADMINS=admin@dev.local,developer@dev.local
AUTH_MFA_ENABLED=false
AUTH_SKIP_SECURITY_CHECKS=true
AUTH_VERBOSE_LOGGING=true

# 开发环境测试用户
AUTH_TEST_USERS=admin@dev.local:password,user@dev.local:password

# 日志配置
LOG_CHANNEL=stack
LOG_LEVEL=debug
FILAMENT_LOGGING_ENABLED=true
FILAMENT_LOG_CHANNEL=filament_dev
FILAMENT_LOG_LEVEL=debug
FILAMENT_LOG_REQUESTS=true
FILAMENT_LOG_RESPONSES=true
FILAMENT_LOG_PERFORMANCE=true

# 安全配置（开发环境放宽）
SESSION_LIFETIME=120
SESSION_SECURE_COOKIE=false
SESSION_DOMAIN=localhost
SESSION_ENCRYPT=false

# 静态资源配置
FILAMENT_ASSETS_VERSION=4.0.0-dev
FILAMENT_ASSETS_CDN_ENABLED=false
FILAMENT_ASSETS_CACHE_ENABLED=false

# 性能配置（开发环境关闭优化）
FILAMENT_CACHE_ENABLED=false
FILAMENT_CONNECTION_POOL_ENABLED=false
FILAMENT_AUTO_RELOAD=true
FILAMENT_RELOAD_STRATEGY=immediate

# 监控配置（开发环境详细监控）
FILAMENT_MONITORING_ENABLED=true
FILAMENT_METRICS_ENABLED=true
FILAMENT_HEALTH_CHECK_ENABLED=true
FILAMENT_ALERTING_ENABLED=false

# CSRF 配置（开发环境宽松）
FILAMENT_CSRF_ENABLED=false

# 权限配置（开发环境简化）
FILAMENT_AUTHORIZATION_ENABLED=false
FILAMENT_POLICIES_ENABLED=false
FILAMENT_ROLES_ENABLED=false
FILAMENT_PERMISSIONS_ENABLED=false
FILAMENT_SHIELD_ENABLED=false

# API 配置（开发环境无限制）
API_RATE_LIMITING_ENABLED=false
API_MAX_REQUESTS_PER_MINUTE=1000

# CORS 配置（开发环境开放）
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080,http://127.0.0.1:3000,http://127.0.0.1:8080
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS,PATCH
CORS_ALLOWED_HEADERS=Content-Type,Authorization,X-Requested-With,X-CSRF-TOKEN
CORS_MAX_AGE=0
CORS_SUPPORTS_CREDENTIALS=true

# 错误报告配置
ERROR_REPORTING_ENABLED=true
ERROR_NOTIFICATION_EMAIL=dev@localhost
ERROR_SLACK_WEBHOOK=
ERROR_SENTRY_DSN=

# 开发工具配置
DEVELOPMENT_TOOLS_ENABLED=true
DEVELOPMENT_DEBUG_BAR_ENABLED=true
DEVELOPMENT_TELESCOPE_ENABLED=true
DEVELOPMENT_CLOCKWORK_ENABLED=true

# 文件监控配置
FILE_WATCHER_ENABLED=true
FILE_WATCHER_EXTENSIONS=php,js,css,json,env
FILE_WATCHER_IGNORE_PATHS=node_modules,vendor,storage/logs,storage/framework/cache

# 数据库开发配置
DB_SEED_ON_MIGRATE=true
DB_FOREIGN_KEYS=true
DB_LOG_SLOW_QUERIES=true
DB_SLOW_QUERY_THRESHOLD=100

# 缓存开发配置
CACHE_CLEAR_ON_EVERY_REQUEST=true
CACHE_PREFIX=dev_filament_

# 会话开发配置
SESSION_SAVE_PATH=storage/framework/sessions
SESSION_ENCRYPT=false
SESSION_HTTP_ONLY=false
SESSION_SAME_SITE=lax

# 队列开发配置
QUEUE_DRIVER=sync
QUEUE_WORKERS=1
QUEUE_MAX_JOBS=100
QUEUE_MAX_TIME=60

# 邮件配置（开发环境使用 MailHog）
MAIL_MAILER=smtp
MAIL_HOST=localhost
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="dev@localhost"
MAIL_FROM_NAME="${APP_NAME}"

# 文件存储配置
FILESYSTEM_DISK=local
FILESYSTEM_PREFIX=dev_

# Redis 开发配置
REDIS_CLIENT=phpredis
REDIS_PREFIX=dev_filament_
REDIS_TIMEOUT=5

# WebSocket 配置（开发环境）
WEBSOCKET_ENABLED=true
WEBSOCKET_PORT=6001
WEBSOCKET_HOST=127.0.0.1

# 热更新配置
HOT_RELOAD_ENABLED=true
HOT_RELOAD_PORT=35729
HOT_RELOAD_HOST=127.0.0.1

# 浏览器同步配置
BROWSER_SYNC_ENABLED=true
BROWSER_SYNC_PORT=3000
BROWSER_SYNC_HOST=127.0.0.1
BROWSER_SYNC_PROXY=http://localhost:8787

# 测试配置
TESTING_ENABLED=true
TESTING_DB_CONNECTION=sqlite
TESTING_DB_DATABASE=:memory:
TESTING_CACHE_DRIVER=array
TESTING_SESSION_DRIVER=array

# 性能分析配置
PROFILING_ENABLED=true
PROFILING_XHPROF_ENABLED=true
PROFILING_BLACKFIRE_ENABLED=false
PROFILING_NEW_RELIC_ENABLED=false

# 文档配置
DOCS_ENABLED=true
DOCS_PORT=8080
DOCS_HOST=127.0.0.1
DOCS_AUTO_GENERATE=true

# 模拟数据配置
MOCK_DATA_ENABLED=true
MOCK_DATA_COUNT=100
MOCK_DATA_FACTORIES=App\Database\factories

# 开发插件配置
DEVELOPMENT_PLUGINS_ENABLED=true
DEVELOPMENT_DEBUG_PLUGIN_ENABLED=true
DEVELOPMENT_ROUTES_PLUGIN_ENABLED=true
DEVELOPMENT_DATABASE_PLUGIN_ENABLED=true